<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MyCardView_Style"
    app:cardCornerRadius="@dimen/dp_5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10dp">

        <ImageView
            android:id="@+id/item_news_iv"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_news_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/sn_16sp" />

            <TextView
                android:id="@+id/item_news_tv_resume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2dp"
                android:maxLines="2"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/sn_14sp" />

            <TextView
                android:id="@+id/item_news_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/divider"
                android:textSize="@dimen/sn_12sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

