<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="3">

    <ImageView
        android:id="@+id/iv_map_search_site"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp_5dp"
        android:layout_weight="0.5"
        android:maxWidth="40dp"
        android:src="@drawable/ic_mapmark_red" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_map_search_site"
        android:layout_margin="@dimen/dp_5dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/desname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@color/pink_pressed"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desname"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_map_view"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5"
        android:clickable="true"
        android:maxWidth="35dp"
        android:src="@drawable/map_streetscape_selected" />

</LinearLayout>