<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10dp"
            android:src="@drawable/ic_tips_type" />

        <EditText
            android:id="@+id/et_input_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:editable="false"
            android:hint="类型"
            android:textSize="@dimen/sn_16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10dp"
            android:src="@drawable/ic_tips_title" />


        <EditText
            android:id="@+id/et_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="标题"
            android:inputType="textCapWords" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="@dimen/dp_10dp"
        android:background="@drawable/ic_input_tips_bg">

        <EditText
            android:id="@+id/et_input_tips"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_margin="@dimen/dp_8dp"
            android:layout_marginBottom="@dimen/dp_5dp"
            android:background="@null"
            android:gravity="top"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_input_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/et_input_tips"
            android:layout_marginBottom="@dimen/dp_5dp"
            android:gravity="right"
            android:text="还可以输入300个字符！"
            android:textSize="14sp"
            android:textStyle="italic" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_add_image"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp_5dp"
            android:layout_weight="0.7"
            android:background="@drawable/ic_add_grey"
            android:maxWidth="50dp"></Button>


        <ImageView
            android:id="@+id/iv_select_one"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_5dp"
            android:layout_weight="1.1"
            android:maxWidth="100dp" />

        <ImageView
            android:id="@+id/iv_select_two"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_5dp"
            android:layout_weight="1.1"
            android:maxWidth="100dp" />

        <ImageView
            android:id="@+id/iv_select_three"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.1"
            android:maxWidth="100dp" />
    </LinearLayout>
</LinearLayout>


